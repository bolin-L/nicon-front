<project>

    <!--clean-->
    <target name="clean">
        <echo message="begin clean..."/>
        <echo message="begin delete compressed..."/>
        <delete dir="${basedir}/${compress.dir}"/>
    </target>

    <!--npm version-->
    <target name="npm_version">
        <echo message="npm version..."/>
        <exec dir="." executable="${study-npm}" failonerror="true">
            <arg line="--version"/>
        </exec>
    </target>

    <!--node version-->
    <target name="node_version">
        <echo message="node version..."/>
        <exec dir="." executable="${study-node}" failonerror="true">
            <arg line="--version"/>
        </exec>
    </target>

    <!--npm install-->
    <target name="npm_install"  if="${is_npm_install}">
        <echo message="begin npm_install..."/>
        <exec dir="." executable="${study-npm}" failonerror="true">
            <arg line="install"/>
        </exec>
    </target>

    <!--build style-->
    <target name="webpack_build"  if="${is_webpack_build}">
        <echo message="begin build..."/>
        <exec dir="." executable="${study-node}" failonerror="true">
            <arg line="build/build.js" />
        </exec>
    </target>

    <target name="cp">
        <copy todir="${basedir}/${compress.dir}" overwrite="true">
            <fileset dir="${basedir}">
                <include name="dist/"></include>
            </fileset>
        </copy>
    </target>

</project>
